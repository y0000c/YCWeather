<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/home_appbar">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home_bg"
                android:id="@+id/suggestion_detail_image"/>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/suggestion_detail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flu"
        yc:backgroundTint="@color/mainGreen"
        android:layout_gravity="end"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="15dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        yc:cardCornerRadius="10dp"
        yc:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:textColor="#000"
                android:id="@+id/suggestion_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="建议"
                android:gravity="center"/>
            <TextView
                android:textColor="#ec8888"
                android:id="@+id/suggestion_detail_index"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="优"
                android:gravity="end"/>
            <TextView
                android:id="@+id/suggestion_detail_content"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="cvbcvbcvbffdgdfgdfglasdjfwoeuroiweuroiwuersldkfjlskdjflskdjfsdfsdf建asdfadsfwer议dfgdfgdfg"
                android:gravity="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/suggestion_detail_back"
            android:src="@drawable/back_ring"/>
    </LinearLayout>



</LinearLayout>
